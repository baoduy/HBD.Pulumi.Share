{
  "compilerOptions": {
    "strict": true,
    "outDir": "./.out-bin",
    "declaration": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2019",
      "esnext.array",
      "esnext.string",
      "dom"
    ],
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "files": ["index.ts"],
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules","z_tests",".out-bin", "**/*.test.ts","packageForPublish.ts"]
}
